{
  "manifest_version": 2,
  "name": "Bytespaces",
  "description": "This extension introduces you to the wonderful world of digital graffiti.",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background/background.js"]
  },
  
  "permissions": [
    "http://localhost/*",
    "http://bytespaces/*",
    "contextMenus",
    "activeTab"
  ],

  "web_accessible_resources": [
    "assets/*"
  ]
}